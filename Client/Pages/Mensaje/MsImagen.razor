<MudDialog>
    <DialogContent>
        @*<MudText>@codigoMandado &nbsp; @articuloMandado</MudText>*@
        <center>
            <MudImage Src="@rutaMandada" Alt="Mony the dog" Elevation="25" Class="rounded-lg" Width="450" Height="350" />
        </center>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Cancel">Cerrar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }


    [Parameter]
    public string rutaMandada { get; set; }
    [Parameter]
    public string codigoMandado { get; set; }
    [Parameter]
    public string articuloMandado { get; set; }
    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
