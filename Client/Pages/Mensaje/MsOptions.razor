@using MudBlazor;
<MudDialog>
    <DialogContent>
        <div class="d-flex flex-column py-1">
            <MudButton Variant="Variant.Filled" OnClick="@(() => OpcionSeleccionada(1))" Color="Color.Info">Imprimir Inspeccion</MudButton>
           <br />
            <MudButton Variant="Variant.Filled" OnClick="@(() => OpcionSeleccionada(2))" Color="Color.Success">Inspeccion Detallada</MudButton>
            <br />
            <MudButton Variant="Variant.Filled" OnClick="@(() => OpcionSeleccionada(3))" Color="Color.Warning">Inspección No Cumplida</MudButton>
            <br />
            <MudButton Variant="Variant.Filled" OnClick="@(() => OpcionSeleccionada(4))" Color="Color.Tertiary">Exportal a Excel</MudButton>

        </div>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Close">Cerrar</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] 
    private MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public int codigoMandado { get; set; }

    void Close() => MudDialog.Close(DialogResult.Ok(true));


    void OpcionSeleccionada(int opcion)
    {
        MudDialog.Close(DialogResult.Ok(opcion));
        Close();
    }
}