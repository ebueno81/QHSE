        <MudNavLink Href="/page/ReporteDetallado" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.PostAdd">Reporte Detallado</MudNavLink>
    </MudNavGroup>*@

    <AuthorizeView Roles="Administrador,Supervisor">
        <Authorized>

            <MudNavLink Href="/page/usuario" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Groups">Usuarios</MudNavLink>
            <MudNavLink Href="/page/empresa" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Receipt">Empresa</MudNavLink>
        </Authorized>
    </AuthorizeView>

    <MudNavLink OnClick="Ayuda" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Report">Ayuda</MudNavLink>


</MudNavMenu>

@code
{

    private void Ayuda()
    {
        string rutaUrl = $"{appData.urlReporte}ManualAyuda.pdf";
        _jsServicio.InvokeAsync<object>("open", rutaUrl, "_blank");
    }
}