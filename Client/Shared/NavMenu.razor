@inject IJSRuntime _jsServicio;
<MudNavMenu>

    <MudNavLink Href="/page/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Insights">DashBoard</MudNavLink>

    <MudNavGroup Title="Mantenimiento" Expanded="false" Icon="@Icons.Material.Filled.ImagesearchRoller">
        <MudNavLink Href="/page/trabajador" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Group">Trabajadores</MudNavLink>
        <MudNavLink Href="/page/area" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.PieChart">Areas</MudNavLink>
        <MudNavLink Href="/page/categoria" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.VerticalAlignCenter">Categorias</MudNavLink>
        <MudNavLink Href="/page/subcategoria" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ReadMore">Sub Categorias</MudNavLink>
    </MudNavGroup>
  
    <MudNavGroup Title="Procesos" Expanded="false" Icon="@Icons.Material.Filled.GridView">
        <AuthorizeView Roles="Administrador,Supervisor,Usuario">
            <Authorized>
                <MudNavLink Href="/page/Acta" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.FiberNew">Registro de Actas</MudNavLink>
            </Authorized>
        </AuthorizeView>
        
        <MudNavLink Href="/page/RegistroInspeccion" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Input">Registro Inspección</MudNavLink>
        <AuthorizeView Roles="Administrador,Supervisor">
            <Authorized>
                <MudNavLink Href="/page/plantilla" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.DynamicFeed">Plantillas</MudNavLink>
            </Authorized>
        </AuthorizeView>
    </MudNavGroup>

   @* <MudNavGroup Title="Reportes" Expanded="false" Icon="@Icons.Material.Filled.Plagiarism">
